  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch backend",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "LOCAL_MODE": "true"
      },
      "runtimeArgs": ["start"]
    }
  ]
}
